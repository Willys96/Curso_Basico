@import "nib"
@import "normalize.styl"
@import "fonts.styl"

vendor-prefixes = webkit o ms moz official papitas willy
//Funci√≥n Mixin
// animacion(parametro)
// 	-webkit-animation parametro
// 	-moz-animation parametro
// 	-ms-animation parametro
// 	-o-animation parametro
// 	animation parametro
// transformacion(parametro)
// 	-webkit-transform parametro
// 	-moz-transform parametro
// 	-ms-transform parametro
// 	-o-transform parametro
// 	transform parametro

gris_oscuro = #333333
gris_claro = #818181
rojo = #BD255B
gris_mas_claro = #F0F0F0
a 
	text-decoration none
body
	font-size 16px
figure
	margin 0
img 
	vertical-align top
ul
	margin 0
	padding 0
.actions
	bottom 0
	left 0
	position absolute
	right 0
	background rgba(black,.3)
.action 
	color white
	margin-right .5em
	font-size 1.2em
	&:last-child
		margin-right 0
	&.gray
		color gris_claro
.author
	color gris_claro
.button-menu	
	color gris_oscuro
	left .5em
	margin-top -10px
	position absolute
	top 50%
.border-bottom
	border-bottom 1px solid gris_claro
.center-block
	margin 0 auto
.center-text
	text-align center
.padding 
	padding 1em
.left
	float left
.right
	float right
.wrap
	width 1000px
.round
	border-radius 50%
	overflow hidden
.padding-tb
	padding 1em 0
.progress
	margin 1em 0
	position relative
	.min
	.max
		font-size .8em
		position absolute
		top -5px
	.min
		left 0
	.max
		right 0
	.total
		background gris_claro
		border-radius 5px 
		height 5px
		margin 0 auto
		width 75%
	.state 
		background rojo 
		border-radius 5px 
		height 5px
		position relative
		width 30%
		animation 20s state infinite linear
	.circle
		background gris_oscuro
		border-radius 50%
		height 10px
		position absolute
		right 0
		top -2.5px
		width 10px
		animation 1s circle infinite linear
@keyframes state
	0%
		background blue
		width 0
	100%
		background red
		width 100%
	// from
	// 	background red
	// to
	// 	background blue
@keyframes circle
	0%
		transform scale(1)
		//transformacion(scale(1))
	100% 
		transform scale(2)
		opacity 0
		// transformacion(scale(2))
.right-text
	text-align right
.relative 
	position relative
.container	
	font-size 0	
	padding 1.4rem
	text-align center
.name
	color gris_oscuro
.menu
	display none
.header
	height 3.5em
	.title
		font-size 1.1em
		line-height 3.5em
		margin 0
		text-align center
.song
	display inline-block
	font-size 1rem
	margin-bottom 1em
	margin-right 1em
	text-align left
	width 8rem	
	&:nth-child(even)
		margin-right 0
	p
		margin .5em 0
.playing
	&.small
		width 20em
		margin 0 auto
.input
	border 1px solid gris_claro
	height 2.5em
	border-radius 5px
	padding 0 1em 0 2em
.search-icon
	position absolute
	top .8em
	color gris_claro
	left .5em
.close-icon
	position absolute
	top .5em
	color gris_claro
	right .5em
	font-size 1.2em
.playlist
	display none
	width 22em
	padding 2em
	border-left 1px solid gris_claro
	.list
		list-style none
	.item
		padding 1em 0	
	.action 
		font-size 14px		
.isotipo 
	width 122px
.logo
	display none
	background white
	padding 1.3em 0
	overflow hidden
.avatar
	width 38px
	height 38px
.username
	color gris_claro
	position relative
	top 9px
	margin-left .5em
	&:after
		border-left 7px solid transparent
		border-right 7px solid transparent
		border-top 9px solid gris_claro
		content ""
		display inline-block
		margin-left .4em
@media screen and (min-width: 480px)
	.song
		&:nth-child(even)
			margin-right 1em
	.image
		img
			width 100%
			height auto
	.playing
		&.medium
			width auto
@media screen and (min-width:1000px)
	body
		background gris_mas_claro
	.button-menu
		display none
	.playing
		padding-top 1.3em
		&.large
			margin 0 auto
			width 62.5em
			overflow hidden
			padding-top 2em
	.logo
		display block
	.playlist
		display block
	.music
		width 32.5em
		float left
		.description
			display none
	.header
		border none
		height auto
		.title
			display none
	.menu
		background gris_mas_claro
		display block
		overflow hidden
		border-top 1px solid gris_claro
		.item
			float left
			list-style none
			a
				color gris_oscuro
				text-transform uppercase
				cursor pointer
				padding 1em
				display block
				border-top 5px solid transparent
				&:hover
					border-top 5px solid gris_oscuro